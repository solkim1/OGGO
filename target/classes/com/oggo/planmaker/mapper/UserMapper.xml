<mapper namespace="com.oggo.planmaker.mapper.UserMapper">

	<resultMap id="userResultMap" type="com.oggo.planmaker.model.User">
		<id property="userId" column="user_id" />
		<result property="userPw" column="user_pw" />
		<result property="userNick" column="user_Nick" />
		<result property="userEmail" column="user_email" />
		<result property="isGoogle" column="is_google" />

	</resultMap>

	<insert id="join" parameterType="com.oggo.planmaker.model.User">
		INSERT INTO tb_user
		(user_id,
		user_nick, user_pw, user_email) VALUES
		(#{userId} ,#{userNick}
		,#{userPw} ,#{userEmail})
	</insert>

	<select id="login" parameterType="com.oggo.planmaker.model.User"
		resultMap="userResultMap">
		SELECT *
		FROM tb_user
		WHERE user_id = #{userId} AND user_pw =
		#{userPw}
	</select>

	<select id="googleLogin" parameterType="com.oggo.planmaker.model.User"
		resultMap="userResultMap">
		SELECT *
		FROM tb_user
		WHERE user_id = #{userId}
	</select>

	<select id="firstCheck" parameterType="com.oggo.planmaker.model.User"
		resultMap="userResultMap">
		SELECT *
		FROM tb_user
		WHERE user_id = #{userId} AND user_nick
		= #{userNick} AND user_email = #{userEmail}
	</select>

	<insert id="googleJoin">
		INSERT INTO tb_user

		(user_id ,user_nick ,user_email,
		is_google)

		VALUES (#{userId} ,#{userNick} ,#{userEmail}, 'Y')
	</insert>

	<update id="editProfile" parameterType="com.oggo.planmaker.model.User">
		UPDATE tb_user

		SET
		user_nick = #{userNick} , user_pw = #{userPw}
		WHERE user_id = #{userId}
	</update>

	<select id="getUserById" parameterType="com.oggo.planmaker.model.User"
		resultMap="userResultMap">
		SELECT * FROM tb_user
		WHERE user_id = #{userId}
	</select>
</mapper>